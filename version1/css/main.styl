banWidth = 300
banHeight = 250

@font-face
  font-family 'gotham light'
  font-style normal
  font-weight 100
  src url(../fonts/gothalig-webfont.woff) format('woff'), url(../fonts/gothalig-webfont.woff2) format('woff2')

@import url("https://fonts.googleapis.com/css?family=Source+Sans+Pro")
/*---------------------------*/
body,
body *
  vertical-align baseline
  border 0 none
  outline 0
  padding 0
  margin 0
  color #FFF
a { cursor pointer }

#main-container
  position absolute
  width banWidth - 2px
  height banHeight - 2px
  border solid 1px #646464
  overflow hidden
#background
  position absolute
  width banWidth - 2px
  height banHeight - 2px
  /*background linear-gradient(to bottom,  #006bae 0%,#0091cf 69%,#0089c8 70%,#53b1e6 73%,#7db9e8 100%)*/
  background #35a6d8 url(../img/background.jpg) no-repeat center center

#car
  position absolute
  left -160px
  top 150px
#wheel-left
  position absolute
  left 42px
  top 32px
#wheel-right
  position absolute
  left 133px
  top 32px
#logo
  position absolute
  left 89px
  top 215px

#lollies
  position absolute
  left 35px
  top 30px

#bgEndframe
  background-color#eceaed
  position absolute
  width banWidth - 2px
  height banHeight - 2px
h1
  margin 0
  font-family 'gotham light'
  font-size 1.2em
  text-align center
  position absolute
  line-height 1.3em
h1.highlight
  font-size 1.5em
  line-height 1.5em

#frame1
  position absolute
  left 0px
  top 0px
  width 100%
  height 100%

#text1
  position absolute
  top 48px
  width 100%
  opacity 0
#cta
  position absolute
  width 119px
  height 29px
  background-color #0070b3
  background-image url(../img/cta.png)
  background-repeat no-repeat
  background-position center center
  box-sizing border-box
  left 89px
  top 77px
  opacity 0

#exit
  position relative
  cursor pointer
  width (banWidth)px
  height (banHeight)px
  display block
  z-index 10
  background transparent
#main-container:hover #cta
  width 125px
  height 34px
  left 86px
  top 74px
  background-color #0070b3
